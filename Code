import random 
name = input("What is your name dear ?  ")
print ("Good Luck", name)
words = ['devendra', 'poonam', 'shyam', 'rekha', 'mukund', 'priyanka', 'rishika', 'dakshita', 'vidya', 'praveen']
guesses = ''
turn = 5
word = random.choice(words)

print ("guess one of our family member name")


while turn > 0:
    failed = 0
        
    for char in word:
       if char in guesses:
          print(char)
       else:
          print("_")
          failed += 1

    if failed ==0:
            print("you win")
            print("the word is :", word)
            break
        
    n = input("guess a char: ")
    guesses+= n
    if char not in word:
            turn-= 1
            print("Wrong")
            print("You have" , turn, "more guesses")

            if turn == 0:
                print("You Loose")  
